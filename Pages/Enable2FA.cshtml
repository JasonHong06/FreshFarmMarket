@page
@model FreshFarmMarket.Pages.Enable2FAModel
@{
    ViewData["Title"] = "Enable 2FA";
}

<h2>Enable Two-Factor Authentication</h2>

<p>Scan this QR code with your Google Authenticator app:</p>
<img src="@Model.QRCodeImage" alt="QR Code" />

<p>Or enter this key manually: <strong>@Model.ManualEntryKey</strong></p>

<form method="post">
    <div class="form-group">
        <label>Enter the 6-digit code from your app:</label>
        <input type="text" asp-for="VerificationCode" class="form-control" required />
        <span asp-validation-for="VerificationCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Verify & Enable 2FA</button>
</form>
